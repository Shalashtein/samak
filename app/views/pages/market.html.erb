<div class="banner">
  <div class="container">
    <h1>Samak: connecting <strong>you</strong> to your local<strong> fisherman</strong>!</h1>
    <p>Fresher, Healthier, Local fish delivered to your doorstep</p>
    <a class="btn btn-ghost" href="#market-section">Browse Today's Fish</a>
  </div>
</div>

<div class="market-header" id="market-section">
<hr><h1> ğŸŸ Today's Catch ğŸŸ </h1><hr>
</div>
<div class="products-area">
    <% @products.each do |p| %>
        <div class="inside-card">
          <%= image_tag(p.catch.fish.image.url, class: "product-image") %>
          <span class="fish-name"><span><%= p.catch.fish.english %></span></span>
          <span class="fish-price"><span><%= "#{p.catch.weight}kg for #{p.price * p.catch.weight}LBP" %></span></span>
          <span class="add-to-cart-button">
             <%= link_to items_path(item: {product_id: p.id, cart_id: @current_cart.id}), method: :post do %> <button class="btn btn-ghost add-to-cart-button-text">Add to cart</button> <% end %>
          </span>
        </div>
    <% end %>
</div>
