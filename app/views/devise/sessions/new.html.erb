<div id="login-container">
  <h2>Log in</h2>
  <div class="login-form">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), autocomplete: 'disabled') do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  autocomplete: 'disabled'%>
      <%= f.input :password,
                  required: false,
                  autocomplete: 'disabled' %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-ghost" %>
    </div>
  <% end %>
  </div>
  <div class="login-footer">
    <%= link_to "New here? Click here to signup", new_user_registration_path, method: :get %> <br>
    <%= link_to "forgot password?", new_user_password_path, method: :get %>
  </div>
</div>

