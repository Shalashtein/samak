<div id="login-container">
  <h2>Log in</h2>
  <div class="login-form">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-ghost btn-margins" %>
    </div>
  <% end %>
  </div>
  <div class="login-footer">
    <%= button_to "New here? Click here to signup", new_user_registration_path, method: :get, class: "btn btn-ghost-login btn-margins" %>
    <%= link_to "forgot password?", new_user_password_path, method: :get %>
  </div>
</div>

