
<%= simple_form_for(@fish) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :scientific %>
    <%= f.input :english %>
    <%= f.input :lebanese %>
    <%= f.input :water %>
    <%= f.input :texture %>
    <%= f.input :flavor %>
    <%= f.input :image %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
